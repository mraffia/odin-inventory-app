extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='item_name') Name:
      input#item_name.form-control(type='text', placeholder='Name of item' name='item_name' required='true' value=(undefined===item ? '' : item.name))
    div.form-group
      label(for='item_desc') Description:
      textarea#item_desc.form-control(type='textarea', placeholder='Description' name='item_desc' required='true') #{undefined===item ? '' : item.desc}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', name='price' value=(undefined===item ? 0 : item.price) required='true' min="0")
    div.form-group
      label(for='number_in_stock') Stock:
      input#number_in_stock.form-control(type='number', name='number_in_stock' value=(undefined===item ? 0 : item.number_in_stock) required='true' min="0")
    div.form-group
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked)
            label(for=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
